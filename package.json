{
  "name": "portfolio-site",
  "version": "1.0.0",
  "description": "Personal portfolio website for Divyaraj Singh Sisodia",
  "main": "index.html",
  "scripts": {
    "start": "npm run build:css && npx serve .",
    "build": "npm run build:css",
    "build:css": "npx tailwindcss -i ./src/input.css -o ./assets/css/tailwind.css --minify",
    "watch:css": "npx tailwindcss -i ./src/input.css -o ./assets/css/tailwind.css --watch",
    "dev": "npm run watch:css & npx serve ."
  },
  "keywords": [
    "portfolio",
    "website",
    "static",
    "html",
    "css",
    "javascript"
  ],
  "author": "Divyaraj Singh Sisodia",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/divyaraj23/portfolio-site.git"
  },
  "bugs": {
    "url": "https://github.com/divyaraj23/portfolio-site/issues"
  },
  "homepage": "https://divyaraj.tech",
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.18",
    "autoprefixer": "^10.4.23",
    "postcss": "^8.5.6",
    "serve": "^14.2.0",
    "tailwindcss": "^4.1.18"
  }
}
